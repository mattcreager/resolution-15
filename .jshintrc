    "newcap"        : false,   // Don't require capitalization of constructors

    "maxdepth"      : 5,

    // Environments
    "browser"       : false,
    "browserify"    : true,
    "couch"         : false,
    "devel"         : true,
    "dojo"          : false,
    "jasmine"       : false,
    "jquery"        : false,
    "mocha"         : true,
    "mootools"      : false,
    "node"          : false,
    "nonstandard"   : false,
    "prototypejs"   : false,
    "qunit"         : false,
    "rhino"         : false,
    "shelljs"       : false,
    "worker"        : false,
    "wsh"           : false,
    "yui"           : false,

    // Custom Globals
    "globals"       : {}
}